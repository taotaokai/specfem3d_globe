# https://help.github.com/articles/configuring-a-remote-for-a-fork/
git remote -v
git remote add upstream https://github.com/geodynamics/specfem3d_globe.git

# https://help.github.com/articles/syncing-a-fork/
git checkout master
git pull
git fetch upstream
git merge upstream/master 
git push

# use SSH to enable password-less push 
git remote set-url origin git@github.com:taotaokai/specfem3d_globe.git

# use vimdiff for git diff and merge (https://medium.com/usevim/git-and-vimdiff-a762d72ced86)
$ git config --global diff.tool vimdiff
$ git config --global merge.tool vimdiff
$ git config --global difftool.prompt false
$ git difftool <file name>
